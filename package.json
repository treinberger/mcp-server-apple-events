  },
  "keywords": [
    "mcp",
    "apple",
    "reminders",
    "calendar",
    "events",
    "automation"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "bin": {
    "mcp-server-apple-events": "./bin/run.cjs"
